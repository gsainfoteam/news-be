{
  "name": "news-be",
  "version": "2.0.0",
  "description": "NestJS backend for news frontend with Prisma, PostgreSQL, Drizzle and Swagger.",
  "private": true,
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "start": "node dist/main.js",
    "start:dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:push": "prisma db push"
  },
  "dependencies": {
    "@nestjs/common": "10.3.5",
    "@nestjs/core": "10.3.5",
    "@nestjs/platform-express": "10.3.5",
    "@nestjs/swagger": "7.3.1",
    "@prisma/client": "5.16.1",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "dotenv": "16.4.4",
    "drizzle-orm": "0.33.0",
    "pg": "8.12.0",
    "prisma": "5.16.1",
    "reflect-metadata": "0.2.1",
    "rxjs": "7.8.1",
    "swagger-ui-express": "5.0.1"
  },
  "devDependencies": {
    "@swc/core": "^1.15.13",
    "@swc/helpers": "^0.5.19",
    "@swc/register": "^0.1.10",
    "@types/node": "20.11.24",
    "@types/pg": "^8.16.0",
    "drizzle-kit": "0.24.2",
    "ts-node-dev": "2.0.0",
    "tsx": "^4.21.0",
    "typescript": "5.3.3"
  }
}